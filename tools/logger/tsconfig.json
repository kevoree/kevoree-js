{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": true,
        "declaration": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build"
    },
    "filesGlob": [
        "./typings/**/*.ts",
        "./src/**/*.ts",
        "!./src/decl/**/*",
        "!./node_modules/**/*"
    ],
    "files": [
        "./typings/chalk/chalk.d.ts",
        "./typings/tsd.d.ts",
        "./src/main/kevoree-logger.ts",
        "./src/test/test.ts"
    ]
}
