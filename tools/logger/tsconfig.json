{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "built"
    },
    "filesGlob": [
        "typings/main.d.ts",
        "src/**/*.ts"
    ],
    "files": [
        "typings/main.d.ts",
        "src/main/kevoree-logger.ts",
        "src/main/Logger.ts",
        "src/main/LoggerFactory.ts",
        "src/main/LoggerImpl.ts",
        "src/main/LogLevel.ts",
        "src/test/test.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "rewriteOnSave": true
    }
}
