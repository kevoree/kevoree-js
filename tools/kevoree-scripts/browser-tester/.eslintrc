---
extends:
  - ../.eslintrc
  - plugin:react/recommended
env:
  browser: true
plugins:
  - react
  - import
parserOptions:
  ecmaFeatures:
    jsx: true
    modules: true
rules:
  react/jsx-uses-react: 2
  react/jsx-uses-vars: 2
  react/jsx-no-undef: 2
  react/react-in-jsx-scope: 2
  react/no-unknown-property: 2
  react/no-render-return-value: 0
