{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/**/*.ts",
        "!./node_modules/**/*"
    ],
    "files": [
        "./src/main/JavascriptNode.ts",
        "./src/test/ModelServiceImpl.ts",
        "./src/test/test.ts",
        "./typings/kevoree-api/kevoree-api.d.ts",
        "./typings/kevoree-logger/kevoree-logger.d.ts",
        "./typings/kevoree-util/kevoree-util.d.ts",
        "./typings/ts-injector/ts-injector.d.ts"
    ]
}
