{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "built"
    },
    "filesGlob": [
        "src/**/*.ts",
        "typings/main.d.ts"
    ],
    "files": [
        "src/main/Core.ts",
        "src/main/DeployCallback.ts",
        "src/main/kevoree-core.ts",
        "src/main/WebSocketClientPlugin.ts",
        "src/test/test.ts",
        "typings/main.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true,
        "rewriteOnSave": true
    }
}
